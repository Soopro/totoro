@import "_styles/mina-ui.less";

.cover {
  width: 100%;
}

.holder {
  min-height: 480rpx;
  & .ico {
    margin: 8rpx;
  }
  & .ico.pie {
    font-size: 120rpx;
  }
}

.item-figure {
  width: 100%;
  height: 260rpx;
}

.tag {
  padding: 0 @space-size-xs;
  background: @color-primary !important;
}

.shelf-bottomsheet {
  border-top: 1rpx solid @color-primary;
  background-color: @color-light;
  padding-bottom: 48rpx;
}

.amount-count {
  min-width: 60rpx;
  text-align: center;
}
