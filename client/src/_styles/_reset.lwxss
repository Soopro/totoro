/* reset */
page {
  line-height: 1.4;
  /*  font-family: -apple-system-font, "Helvetica Neue", sans-serif;*/
}


icon,
image,
text,
view,
swiper,
cover-view,
movable-view,
scroll-view {
  box-sizing: border-box;
}
icon {
  vertical-align: middle;
}
image {
  width: 100%;
}
image[mode="widthFix"]{
  height: auto;
}

button {
  &::after {
    display: none;
    border: 0;
  }
}
